<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_trip_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_completed"
                android:textColor="@color/white"
                android:textSize="@dimen/_18dp" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_110dp"
            android:layout_height="@dimen/_110dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30dp"
            android:background="@drawable/profil">

        </de.hdodenhof.circleimageview.CircleImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_your_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/your_agent"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/_12dp" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Dev Akshay"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_16dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/time"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_12dp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="0 min"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/price"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_12dp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:singleLine="true"
                            android:text="$0.00"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/distance"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_12dp" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="0 km"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mark"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:id="@+id/txt_how_was"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/how_was_your_trip"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_16dp" />


                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/ImageRatingBar_new"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15dp"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="0" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_simple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="@dimen/_5dp"
                        app:cardUseCompatPadding="true"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/edt_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_12dp"
                            android:background="@null"
                            android:gravity="top|left"
                            android:hint="@string/additionl_comment"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="6"
                            android:minLines="5"
                            android:scrollbars="vertical"
                            android:textSize="@dimen/_14dp" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_14dp"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_12dp"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_16dp" />

                        <ImageView
                            android:id="@+id/img_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/next_icon_green" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
<ProgressBar
    android:id="@+id/reviewProgrss"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"/>
</RelativeLayout>