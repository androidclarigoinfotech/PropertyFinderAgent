<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.DocumentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_14dp"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ListView
                android:id="@+id/vehical_list"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="@dimen/_14dp"
                android:dividerHeight="@dimen/_1dp"
                android:footerDividersEnabled="false"
                android:nestedScrollingEnabled="true"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/lay_edit_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vehical_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/vehical_information"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/_16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:background="@color/disable_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_car_make"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20dp"
                        android:text="@string/car_make"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <EditText
                        android:id="@+id/edt_car_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_25dp"
                        android:layout_toStartOf="@+id/car_make_arrow"
                        android:layout_toEndOf="@+id/tv_car_make"
                        android:background="@color/transparent"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/colorPurpleLight"
                        android:textColorHint="@color/disable_color"
                        android:textSize="@dimen/_14dp" />

                    <ImageView
                        android:id="@+id/car_make_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_purpal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginRight="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_car_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20dp"
                        android:text="@string/car_model"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <EditText
                        android:id="@+id/edt_car_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_25dp"
                        android:layout_toStartOf="@+id/car_model_arrow"
                        android:layout_toEndOf="@+id/tv_car_model"
                        android:background="@color/transparent"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/colorPurpleLight"
                        android:textColorHint="@color/disable_color"
                        android:textSize="@dimen/_14dp" />

                    <ImageView
                        android:id="@+id/car_model_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/right_arrow_purpal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_seaters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:text="@string/seaters"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <EditText
                        android:id="@+id/edt_seaters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_25dp"
                        android:layout_toStartOf="@+id/seaters_arrow"
                        android:layout_toEndOf="@+id/tv_seaters"
                        android:background="@color/transparent"
                        android:gravity="right"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/colorPurpleLight"
                        android:textColorHint="@color/disable_color"
                        android:textSize="@dimen/_14dp" />

                    <ImageView
                        android:id="@+id/seaters_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_purpal" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:background="@color/disable_color" />

                <TextView
                    android:id="@+id/tv_vehical_Documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/vehical_Documents"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/_16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:background="@color/disable_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_car_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:text="@string/car_registration"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <TextView
                        android:id="@+id/tv_car_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_toStartOf="@+id/img_car_registration"
                        android:layout_toEndOf="@+id/tv_car_registration"/>


                    <ImageView
                        android:id="@+id/img_car_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/upload_perpal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_car_insurence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:text="@string/vehical_insurence"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <TextView
                        android:id="@+id/tv_car_insu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/upload_car_insurence"
                        android:layout_toEndOf="@+id/tv_car_insurence"
                        android:gravity="end" />


                    <ImageView
                        android:id="@+id/upload_car_insurence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/upload_perpal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_16dp">

                    <TextView
                        android:id="@+id/tv_other_documents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:text="@string/other_documents"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="@dimen/_14dp" />

                    <TextView
                        android:id="@+id/tv_other_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/upload_other_documents"

                        android:layout_toEndOf="@+id/tv_other_documents"
                        android:gravity="end" />

                    <ImageView
                        android:id="@+id/upload_other_documents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/upload_perpal" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:background="@color/disable_color" />


                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_18dp"
                    android:background="@drawable/bg_et_rounded_blue_border"
                    android:gravity="center|center_vertical"
                    android:paddingTop="@dimen/_14dp"
                    android:paddingBottom="@dimen/_14dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_add_vehical"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_18dp"
                android:background="@drawable/bg_et_rounded_blue_border"
                android:gravity="center|center_vertical"
                android:paddingTop="@dimen/_14dp"
                android:paddingBottom="@dimen/_14dp"
                android:text="@string/add_vehical"
                android:textAllCaps="false"
                android:textColor="@color/colorPurpleLight"
                android:textSize="@dimen/_14dp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>