<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Registration_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/left_arrow_purpal" />

            <TextView
                android:id="@+id/tv_agent_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/Agent_Information"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_sub_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@string/application_acceptance_results_within_hours"
                android:textColor="@color/colorPurpleLight"
                android:textSize="@dimen/_12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/first_name"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/f_n_arrow"
                    android:layout_toRightOf="@+id/tv_first_name"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/first_name"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/f_n_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/last_name"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/l_n_arrow"
                    android:layout_toRightOf="@+id/tv_last_name"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/last_name"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/l_n_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_dre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/dre"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_dre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/dre_arrow"
                    android:layout_toRightOf="@+id/tv_dre"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="123456"
                    android:inputType="number"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/dre_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/phon_number"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/phone_arrow"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="1234567890"
                    android:inputType="number"
                    android:maxLength="14"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/phone_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <TextView
                android:id="@+id/tv_agent_membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/agent_membership"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_plz_check_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@string/plz_check_all_that_applies_to_you"
                android:textColor="@color/colorPurpleLight"
                android:textSize="@dimen/_12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_registered_mls"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/registered_mls"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />


                <ToggleButton
                    android:id="@+id/tb_registered_mls"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_association"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/association_of_realtors"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />


                <ToggleButton
                    android:id="@+id/tb_association"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_ekey"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/ekey_access"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />


                <ToggleButton
                    android:id="@+id/tb_ekey_access"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <TextView
                android:id="@+id/tv_agent_Documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/agent_Documents"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_take_a_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@string/take_a_picture__upload_agent_licence"
                android:textColor="@color/colorPurpleLight"
                android:textSize="@dimen/_12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_upload_real_estate_licence"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/Upload_Real_Estate_Licence"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:id="@+id/img_upload_real_estate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/upload_perpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_upload_driving_licence"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/upload_driver_licence"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:id="@+id/upload_driver_licence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/upload_perpal" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />


            <TextView
                android:id="@+id/tv_agent_Registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/agent_registration"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_create_login_crntl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@string/create_login_credentials"
                android:textColor="@color/colorPurpleLight"
                android:textSize="@dimen/_12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@color/disable_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_email_login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/email"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/email_login_arrow"
                    android:layout_toRightOf="@+id/tv_email_login"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="abc@gmail.com"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/email_login_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/passowrd"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/pass_arrow"
                    android:layout_toRightOf="@+id/tv_password"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/passowrd"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/pass_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_16dp">

                <TextView
                    android:id="@+id/tv_re_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_20dp"
                    android:text="@string/repeat_password"
                    android:textColor="@color/colorPurpleLight"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/edt_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_toLeftOf="@+id/repeat_password_arrow"
                    android:layout_toRightOf="@+id/tv_re_pass"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/password"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/colorPurpleLight"
                    android:textColorHint="@color/disable_color"
                    android:textSize="@dimen/_14dp" />

                <ImageView
                    android:id="@+id/repeat_password_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_purpal" />

            </RelativeLayout>

            <Button
                android:id="@+id/tv_send_approval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginRight="@dimen/_12dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_et_rounded_blue_border"
                android:backgroundTint="@color/colorPurple"
                android:gravity="center|center_vertical"
                android:padding="12dp"
                android:text="@string/send_approval"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14dp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>