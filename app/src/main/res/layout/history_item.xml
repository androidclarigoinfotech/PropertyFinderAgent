<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/lay_address_agent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:orientation="vertical"
            android:padding="@dimen/_10dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ovel_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/green_bullet" />

                    <TextView
                        android:id="@+id/txt_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toRightOf="@+id/ovel_icon"
                        android:gravity="center_vertical"
                        android:text="@string/from"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_from_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_bottom"
                    android:layout_marginStart="@dimen/_15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay_bottom_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ovel_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/green_bullet" />

                    <TextView
                        android:id="@+id/txt_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toRightOf="@+id/ovel_icon2"
                        android:gravity="center_vertical"
                        android:text="@string/to"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_to_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_bottom_2"
                    android:layout_marginStart="@dimen/_15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_bottom_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@drawable/btn_green_bg"
                    android:backgroundTint="@color/green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_12dp"
                    android:paddingTop="@dimen/_3dp"
                    android:paddingRight="@dimen/_12dp"
                    android:paddingBottom="@dimen/_3dp">

                    <TextView
                        android:id="@+id/tv_pickup_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                </LinearLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/ImageRatingBar_new"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/lay_type"
                    android:gravity="center_vertical"
                    android:isIndicator="true"
                    android:rating="0"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="10dp" />


                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_12dp" />
            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>